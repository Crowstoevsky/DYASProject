@model DYASProject.ViewModels.LoginVM;

<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <!-- agregamos los links para nuestros files de estilo css y usamos asp append para hacerle un hashing a nuestros files-->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/App.style.css" asp-append-version="true" />

</head>
<body>
    <div class=" row mt-5 justify-content-center">
        <div class=" col-sm-4">
            <div class="card">
                <div class="card-header">
                    Login
                </div>
                <div class="card-body">
                    <!-- permitimos acceso de asp a nuestro formulario para poder usar nuestra clase VM y poder manejar las peticiones-->
                    <form asp-controller="Acceso" asp-action="Login" method="post">

                        <input class="form-control mb-3 " type="text" placeholder="Correo" requierd asp-for="Email" />
                        <input class="form-control mb-3 " type="password" placeholder="Contraseña" requierd asp-for="Password" />
                        <div class=" d-grid gap-2 mb-3">
                            <button class="btn btn-primary">Login</button>
                        </div>
                        <!--en caso de retornar un viewdata se crea un div para poder mostrar el mensaje-->
                        @if (ViewData["Mensaje"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Mensaje"]
                            </div>
                        }
                    </form>
                    <!--agregamos un ancor para poder movernos entre pestañas de registrarse y login-->
                    No tienes una cuenta regist rada? <a asp-controller="Acceso" asp-action="Registrarse"> Registrarse</a>
                </div>
            </div>
        </div>

    </div>
    <!--agregamos nuestros scripts para los frameworks de js y css-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
