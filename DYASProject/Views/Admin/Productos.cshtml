@model DYASProject.ViewModels.ProductoMotoIndexVM

@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    ViewData["Title"] = "Motos";
}

<div class="container mt-4">
    <h2>Gestión de Motos</h2>
    <button class="btn btn-success mb-3" data-bs-toggle="modal" data-bs-target="#addMotoModal">Agregar Moto</button>

    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Marca</th>
                <th>Modelo</th>
                <th>CC</th>
                <th>Año</th>
                <th>Color</th>
                <th>Precio</th>
                
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var moto in Model.Motos)
            {
                <tr>
                    <td>@moto.Marca</td>
                    <td>@moto.Modelo</td>
                    <td>@moto.CC</td>
                    <td>@moto.Anio</td>
                    <td>@moto.Color</td>
                    <td>S/ @moto.Precio.ToString("F2")</td>
                    
                    <td>
                        <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#editModal_@moto.IdProducto">Editar</button>
                        <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal_@moto.IdProducto">Eliminar</button>
                        <button class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#detailModal_@moto.IdProducto">Ver Detalles</button>

                    </td>
                </tr>

                <!-- Modal Editar Moto -->
                <div class="modal fade" id="editModal_@moto.IdProducto" tabindex="-1">
                    <div class="modal-dialog">
                        <form asp-action="EditMoto" method="post">
                            <input type="hidden" name="Moto.IdProducto" value="@moto.IdProducto" />
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Editar Moto</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="mb-3">
                                        <label>Marca</label>
                                        <input type="text" class="form-control" name="Moto.Marca" value="@moto.Marca" required />
                                    </div>
                                    <div class="mb-3">
                                        <label>Modelo</label>
                                        <input type="text" class="form-control" name="Moto.Modelo" value="@moto.Modelo" required />
                                    </div>
                                    <div class="mb-3">
                                        <label>CC</label>
                                        <input type="text" class="form-control" name="Moto.CC" value="@moto.CC" required />
                                    </div>
                                    <div class="mb-3">
                                        <label>Año</label>
                                        <input type="text" class="form-control" name="Moto.Anio" value="@moto.Anio" required />
                                    </div>
                                    <div class="mb-3">
                                        <label>Color</label>
                                        <input type="text" class="form-control" name="Moto.Color" value="@moto.Color" required />
                                    </div>
                                    <div class="mb-3">
                                        <label>Precio</label>
                                        <input type="number" step="0.01" class="form-control" name="Moto.Precio" value="@moto.Precio" required />
                                    </div>
                                    <div class="mb-3">
                                        <label>Proveedor</label>
                                        <select class="form-select" name="Moto.ProveedorId" required>
                                            <option value="">Seleccione un proveedor</option>
                                            @foreach (var proveedor in Model.Proveedores)
                                            {
                                                <option value="@proveedor.IdProveedor" )>@proveedor.Nombre</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="mb-3">
                                        <label>Estado</label>
                                        <select class="form-select" name="Moto.EstadoPMId" required>
                                            <option value="">Seleccione un estado</option>
                                            @foreach (var estado in Model.Estados)
                                            {
                                                <option value="@estado.IdEstadoPM" >@estado.NombreEstado</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-primary">Guardar</button>
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Modal Eliminar Moto -->
                <div class="modal fade" id="deleteModal_@moto.IdProducto" tabindex="-1">
                    <div class="modal-dialog">
                        <form asp-action="DeleteMoto" method="post">
                            <input type="hidden" name="idMoto" value="@moto.IdProducto" />
                            <div class="modal-content">
                                <div class="modal-header bg-danger text-white">
                                    <h5 class="modal-title">Eliminar Moto</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    ¿Estás seguro de que deseas eliminar la moto <strong>@moto.Marca @moto.Modelo</strong>?
                                </div>
                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-danger">Eliminar</button>
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- Modal Detalles Moto -->
                <div class="modal fade" id="detailModal_@moto.IdProducto" tabindex="-1">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header bg-info text-white">
                                <h5 class="modal-title">Detalles de la Moto</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h6>Información General</h6>
                                        <p><strong>Marca:</strong> @moto.Marca</p>
                                        <p><strong>Modelo:</strong> @moto.Modelo</p>
                                        <p><strong>CC:</strong> @moto.CC</p>
                                        <p><strong>Año:</strong> @moto.Anio</p>
                                        <p><strong>Color:</strong> @moto.Color</p>
                                        <p><strong>Precio:</strong> S/ @moto.Precio.ToString("F2")</p>
                                    </div>
                                    <div class="col-md-6">
                                        <h6>Proveedor</h6>
                                        <p><strong>Nombre:</strong> @moto.Proveedor.Nombre</p>
                                        <p><strong>Teléfono:</strong> @moto.Proveedor.Telefono</p>
                                        <p><strong>Email:</strong> @moto.Proveedor.Email</p>

                                        <h6 class="mt-3">Stock en Sucursales</h6>
                                        <ul>
                                            @foreach (var stock in moto.StockSucursal)
                                            {
                                                <li>@stock.Sucursal.Nombre - Stock: @stock.Cantidad</li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </tbody>
    </table>
</div>

<!-- Modal Agregar Moto -->
<div class="modal fade" id="addMotoModal" tabindex="-1">
    <div class="modal-dialog">
        <form asp-controller="Admin" asp-action="AddMoto" method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Agregar Moto</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label>Marca</label>
                        <input type="text" class="form-control" asp-for="Moto.Marca" required />
                    </div>
                    <div class="mb-3">
                        <label>Modelo</label>
                        <input type="text" class="form-control" asp-for="Moto.Modelo" required />
                    </div>
                    <div class="mb-3">
                        <label>CC</label>
                        <input type="text" class="form-control" asp-for="Moto.CC" required />
                    </div>
                    <div class="mb-3">
                        <label>Fecha Creacion</label>
                        <input type="datetime-local" class="form-control" asp-for="Moto.FechaCreacion" required />
                    </div>
                    <div class="mb-3">
                        <label>Año</label>
                        <input type="date" class="form-control" asp-for="Moto.Anio" required />
                    </div>
                    <div class="mb-3">
                        <label>Color</label>
                        <input type="text" class="form-control" asp-for="Moto.Color" required />
                    </div>
                    <div class="mb-3">
                        <label>Precio</label>
                        <input type="number" step="0.01" class="form-control" asp-for="Moto.Precio" required />
                    </div>
                    <div class="mb-3">
                        <label>Proveedor</label>
                        <select class="form-select" name="Moto.ProveedorId" required>
                            <option value="">Seleccione un proveedor</option>
                            @foreach (var proveedor in Model.Proveedores)
                            {
                                <option value="@proveedor.IdProveedor">@proveedor.Nombre</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label>Estado</label>
                        <select class="form-select" name="Moto.EstadoPMId" required>
                            <option value="">Seleccione un estado</option>
                            @foreach (var estado in Model.Estados)
                            {
                                <option value="@estado.IdEstadoPM">@estado.NombreEstado</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Agregar</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </form>
    </div>
</div>




