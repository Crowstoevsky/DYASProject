<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Panel Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex"  >
        <!-- ASIDE -->
        <aside class=" text-white p-3" style=" background:#aad69f; width: 250px; height: 100vh; display: flex; position:fixed;">
            <h4 class="mb-4">Admin</h4>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Admin" asp-action="Dashboard">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Admin" asp-action="Empleados">Empleados</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Admin" asp-action="Productos">Productos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Admin" asp-action="HistorialVentas">Historial Ventas</a>
                </li>
            </ul>
        </aside>

        <!-- MAIN -->
        <main class="flex-fill" style="background-color: #242424; margin-left:250px;">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
