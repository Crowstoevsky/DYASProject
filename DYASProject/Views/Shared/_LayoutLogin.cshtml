<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DYASProject.styles.css" asp-append-version="true" />
    <style>
        body {
            height: 100vh;
            width: 100%;
            margin: 0;
			background-color: #212121;
            display: flex;
            justify-content: center;
            align-items: center; 

        }

        .imagen {
            background-image: url('/img/logo.png');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }
        @@media (max-width: 768px) {
            .imagen

        {
            display: none !important;
        }

        .login-container {
            width: 100%;
            padding: 2rem;
        }

        .login-aside {
            flex: 1 1 100%;
        }

        }
    </style>
</head>
<body style="margin: 0;">

    <div style="display: flex; height: 100vh; width: 100%; flex-wrap: wrap;">

        <!-- Aside izquierdo: Imagen del negocio -->
        <aside class="imagen" style="flex: 2; height: 100vh; background-color: #111;"></aside>

        <!-- Aside derecho: Login -->
        <aside class="login-aside" style="flex: 1; height: 100vh; background-color: #212121; display: flex; justify-content: center; align-items: center;">
            @RenderBody()
        </aside>

    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>


</html>
